{
    "manifest_version": 2,
    "name": "Fancy Reader",
    "version": "0.1",

    "author": {
        "name": "Yuri Brunetto",
        "e-mail": "yuribrunetto@hotmail.com.br",
        "website": "http://www.ybrntt.com.br"
    },

    "browser_action": {
        "default_icon": "img/icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["libs/jquery.js", "src/app.js"]
        }
    ],

    "background": {
        "scripts": ["src/background.js"]
    }
}
